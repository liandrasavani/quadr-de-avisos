<%- include('./partials/head') %>

<body>

<%- include('./partials/navbar') %>

    <div class="container">
        <br><br>
        
        <% if (typeof msg !== 'undefined') { %>
            <% if (msg.tipo === "sucesso") { %>
                  <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><%= msg.tipo %></strong> <%= msg.corpo %> 
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                 
                <% } %>
                <% if (msg.tipo === "erro") { %>
                  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong><%= msg.tipo %></strong> <%= msg.corpo %> 
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                 
                <% } %>
        <% } %>

        <br><br>

        <a href="#"><i class="fas fa-long-arrow-alt-left"></i>Voltar</a> <br> <br>
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="header bg-purple text-white pl-5 p-4">
                    <h2><i class="fas fa-plus-circle"></i>Novo Aviso</h2>
                </div>

                <form action="/avisos/novo" method="POST">
                    <div class="form-group">
                        <br>
                        <label for="titulo">TÃ­tulo</label>
                        <input id="titulo" name="titulo" placeholder="Digite o titulo do aviso" type="text"
                            class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="data">Data</label>
                        <input id="data" name="data" type="date" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="Digite o aviso aqui">Mensagem</label>
                        <textarea id="mensagem" name="mensagem" cols="40" rows="5"
                            class="form-control" required placeholder="Digite o aviso aqui"></textarea>
                    </div>
                    <div class="form-group text-right">
                        <button name="submit" type="submit" class="btn btn-secondary">Limpar</button>
                        <button name="submit" type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

</html>